{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Install Dependencies",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["install"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dev Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "strapi:develop"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "env": {
                "DATABASE_HOST": "localhost",
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dev Server w Tee Log",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "strapi:develop:log"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "env": {
                "DATABASE_HOST": "localhost",
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Docker Local",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "docker:up:local"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ]
}
